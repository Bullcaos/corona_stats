<%- include('../template/header_up') %>
<script type="text/javascript" src="/static/js/overview.js" async></script>
<%- include('../template/header_low') %> 
<div class="section row container">
    <form method="POST" action="" class="col s12 m6 l4" onsubmit="return false">
        <div class="row">
            <div class="col s12 input-field">
                <select id="selectCountry" onchange="loadChartData()">
                    <% countries.forEach((country, index) => { %>
                    <option value="<%= index %>" <% if(index == 0) { %>selected<% } %>><%= country %></option>
                    <% }); %>
                </select>
            </div>
        </div>
    </form>
</div>
<div class="section center container">
    <canvas id="covidStatsChart" width="600" height="300"></canvas>
</div>
<div class="section container">
    <h4 class="blue-text text-lighten-3">Últimas estadísticas</h4>
    <div class="row center">
        <div class="col s12 m4">
            <div class="row">
                <div class="col s12">
                    <h5>Confirmados</h5>
                    <p id="totalConfirmed">0</p>
                    <p id="partialConfirmed" class="blue-text">0</p>
                </div>
            </div>
        </div>
        <div class="col s12 m4">
            <div class="row">
                <div class="col s12">
                    <h5>Muertos</h5>
                    <p id="totalDead">0</p>
                    <p id="partialDead" class="red-text">0</p>
                </div>
            </div>
        </div>
        <div class="col s12 m4">
            <div class="row">
                <div class="col s12">
                    <h5>Recuperados</h5>
                    <p id="totalRecovered">0</p>
                    <p id="partialRecovered" class="green-text">0</p>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../template/footer') %> 